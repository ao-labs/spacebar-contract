{
  "name": "spacebar-contract",
  "version": "0.1.0",
  "description": "Spacebar's smart contracts",
  "scripts": {
    "clean": "rm -rf ./artifacts ./cache ./coverage ./typechain-types ./coverage.json",
    "compile": "npx hardhat compile",
    "test": "forge test -vvv",
    "docs": "npx hardhat docgen",
    "test:report-gas": "forge test -vvv --gas-report",
    "deploy:goerli": "npx hardhat run scripts/deploy_v1.ts --network goerli",
    "upgrade:goerli": "npx hardhat run scripts/upgrade_v2.ts --network goerli"
  },
  "author": "AO Labs",
  "license": "ISC",
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-foundry": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.1",
    "typescript": ">=4.5.0"
  }
